{
    "name": "open-project/open-project",
    "description": "Open source monorepo for applications.",
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "ext-intl": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "alterphp/easyadmin-extension-bundle": "^1.3",
        "doctrine/doctrine-bundle": "^1.9",
        "doctrine/orm": "2.7.x-dev",
        "easycorp/easyadmin-bundle": "^1.17",
        "knplabs/doctrine-behaviors": "^1.5",
        "nette/utils": "^2.5",
        "phpoffice/phpspreadsheet": "^1.5",
        "sensio/framework-extra-bundle": "^5.2",
        "stof/doctrine-extensions-bundle": "^1.3",
        "symfony/asset": "^4.1",
        "symfony/dependency-injection": "^4.1",
        "symfony/dotenv": "^4.1",
        "symfony/finder": "^4.1",
        "symfony/flex": "^1.0",
        "symfony/form": "^4.1",
        "symfony/framework-bundle": "^4.1",
        "symfony/orm-pack": "^1.0",
        "symfony/security-bundle": "^4.1",
        "symfony/swiftmailer-bundle": "^3.1",
        "symfony/templating": "^4.1",
        "symfony/twig-bridge": "^4.1",
        "symfony/twig-bundle": "^4.1",
        "symfony/validator": "^4.1",
        "symfony/yaml": "^4.1",
        "twig/extensions": "^1.5"
    },
    "require-dev": {
        "automattic/phpcs-neutron-ruleset": "^1.8",
        "object-calisthenics/phpcs-calisthenics-rules": "^3.3",
        "phpstan/phpstan": "^0.10.3",
        "phpstan/phpstan-doctrine": "^0.10.0",
        "phpunit/phpunit": "^7.4",
        "slam/php-cs-fixer-extensions": "^1.16",
        "symfony/browser-kit": "^4.1",
        "symfony/debug-bundle": "^4.1",
        "symfony/http-kernel": "^4.1",
        "symfony/maker-bundle": "^1.7",
        "symfony/web-profiler-bundle": "^4.1",
        "symfony/web-server-bundle": "^4.1",
        "symplify/coding-standard": "^4.7",
        "symplify/easy-coding-standard": "^4.7",
        "symplify/monorepo-builder": "^4.7"
    },
    "autoload": {
        "psr-4": {
            "OpenProject\\AutoDiscovery\\": "packages/auto-discovery/src",
            "OpenRealEstate\\": "projects/open-real-estate/src",
            "OpenRealEstate\\Lead\\": "projects/open-real-estate/packages/Lead/src",
            "OpenRealEstate\\PriceMap\\": "projects/open-real-estate/packages/PriceMap/src",
            "OpenRealEstate\\RealEstate\\": "projects/open-real-estate/packages/RealEstate/src",
            "OpenRealEstate\\User\\": "projects/open-real-estate/packages/User/src",
            "OpenTraining\\": "projects/open-training/src",
            "OpenTraining\\Provision\\": "projects/open-training/packages/Provision/src",
            "OpenTraining\\Registration\\": "projects/open-training/packages/Registration/src",
            "OpenTraining\\Security\\": "projects/open-training/packages/Security/src",
            "OpenTraining\\Training\\": "projects/open-training/packages/Training/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenProject\\AutoDiscovery\\Tests\\": "packages/auto-discovery/tests",
            "OpenTraining\\Provision\\Tests\\": "projects/open-training/packages/Provision/tests"
        },
        "classmap": [
            "packages/auto-discovery/tests/KernelProjectDir"
        ]
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "merge": "vendor/bin/monorepo-builder merge",
        "check-cs": "vendor/bin/ecs check packages projects/*/src projects/*/packages/*/src",
        "fix-cs": "vendor/bin/ecs check packages projects/*/src projects/*/packages/*/src --fix",
        "phpstan": "vendor/bin/phpstan analyse projects/*/src projects/*/packages/*/src --level max",
        "adminer-install": [
            "mkdir -p public/adminer",
            "wget https://github.com/vrana/adminer/releases/download/v4.6.3/adminer-4.6.3-en.php -O public/adminer/index.php"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "allow-contrib": true
        }
    }
}
